{
    "name": "hellonico/var-dumper-configurator",
    "description": "Configure Symfony var-dumper when using outside Symfony",
    "license": "GPL-3.0+",
    "type": "library",
    "authors": [
        {
            "name": "Nicolas Lemoine",
            "email": "nico@niconico.fr",
            "homepage": "https://github.com/nlemoine"
        }
    ],
    "require": {
        "symfony/polyfill-php80": "^1.26",
        "symfony/var-dumper": "^4.2 || ^5.0 || ^6.0"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.9"
    },
    "autoload": {
        "psr-4": {
            "HelloNico\\VarDumperConfigurator\\": "src/"
        },
        "files": [
            "src/functions.php"
        ]
    }
}
